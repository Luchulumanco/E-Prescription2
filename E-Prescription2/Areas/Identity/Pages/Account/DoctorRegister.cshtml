@page
@using E_Prescription2.Areas.Identity.Enums
@model DoctorRegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>


   
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row g-1">
             <div class="col-md-6">
                  <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                 <div class="form-floating">
                 
                 <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true"/>
                 <label asp-for="Input.FirstName"></label>

              </div>
             </div>
             
             <div class="col-md-6">
                   <span asp-validation-for="Input.LastName" class="text-danger"></span>
                 <div class="form-floating">
                
                <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.LastName"></label>
              
             </div>
             </div>

             
             
             
             
                         
            
            

             <div class="col-md-6">
                  <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
               
            </div>
            </div>
            
             <div class="col-md-6">



            <label asp-for="Input.HighestQualifications" class="form-control" aria-required="true">
                    Highest Qualification:
                <select asp-for="Input.HighestQualifications" asp-items="Html.GetEnumSelectList<HighestQualificationEnum>()" class="form-select" aria-label="Default select example">
                        <option value="">--select highest qualification--</option>

                    </select>
                </label>
                
               
             </div>
             </div>

              <div class="row g-1">
              <div class="col-md-6">
                 <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.PhoneNumber"></label>
                
            </div>
            </div>
            </div>
            


            <div class="col-md-6">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                
            </div>
            </div>
             <div class="col-md-6">
                 <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                
            </div>
             </div>
              <span asp-validation-for="Input.HealthCouncilRegistrationNumber" class="text-danger"></span>
            <div class="form-floating">
                <input asp-for="Input.HealthCouncilRegistrationNumber" class="form-control"  aria-required="true" />
               <label asp-for="Input.HealthCouncilRegistrationNumber"></label>
               
             </div>
            
             
            
               
              <div class="col-md-3">
             <label asp-for="Input.PracticeNumber" class="form-control"  aria-required="true">
                  Practice Name:
                 <select asp-for="SelectedPracticeNumberId" asp-items="@Model.PracticeNumberItem" class="form-select" aria-label="Default select example" >
                 <option>-- select a practice --</option>
                  
             </select>
             </label>
             </div>
             
            
             
             


                

          
          
           <div class="form-floating">
               <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
           </div> 
        </form>
    

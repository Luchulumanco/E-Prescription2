@model IEnumerable<E_Prescription2.Models.PrescriptionLine>

@{
    ViewData["Title"] = "Index";
}



    <p class="h2">Create New Prescription Line</p>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead class="table-primary ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.medicationActive)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instruction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Repeats)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dispenseDetails.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dispenseDetails.RepeatsLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dispenseDetails.Status)
            </th>
            <th>
                <label>Pharmacist</label>
            </th>
            <th>
                <label>Pharmacy Name </label>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.medicationActive.MedicationName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instruction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Repeats)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dispenseDetails.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dispenseDetails.RepeatsLeft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dispenseDetails.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dispenseDetails.PharmacistUser.FullName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.dispenseDetails.PharmacyRecords.PharmacyName)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PrescriptionLineId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PrescriptionLineId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PrescriptionLineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
    
    
</table>
</div>
<button type="button" class="btn btn-warning">Back to Home</button>

@model IEnumerable<E_Prescription2.Models.MedicalPracticeRecord>

@{
    ViewData["Title"] = "Medical Practice Records";
}

<h1>Medical Practice Records</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label @Html.DisplayNameFor(model => model.PracticeName)>
                     Practice Name
                </label>
            </th>
            <th>
                <label @Html.DisplayNameFor(model => model.AddressLine1)>
                    Address Line 1
                </label>
            </th>
            <th>
                <label @Html.DisplayNameFor(model => model.AddressLine2)>
                     Address Line 2
                </label>
            </th>
            <th>
                <label @Html.DisplayNameFor(model => model.Provinces) class="control-label">
                     Province
                </label>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suburbs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities)
            </th>
            <th>
                <label @Html.DisplayNameFor(model => model.PostalCodes) class="control-label">
                     Postal Code
                </label>
            </th>
            <th>
                <label @Html.DisplayNameFor(model => model.ContactNumber) >
                    Contact Number
                </label>
            </th>
            <th>
                <label @Html.DisplayNameFor(model => model.EmailAddress) class="control-label">
                     Email Address
                </label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PracticeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provinces.ProvinceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suburbs.SuburbName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cities.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCodes.PostalCodeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PracticeNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PracticeNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PracticeNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

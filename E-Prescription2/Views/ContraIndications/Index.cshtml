@model IEnumerable<E_Prescription2.Models.ContraIndication>

@{
    ViewData["Title"] = "Index";
}
<style>
    .modal {
        text-align: center;
        padding: 0 !important;
    }

        .modal:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -4px;
        }

    .modal-dialog {
        display: inline-block;
        text-align: left;
        vertical-align: middle;
    }

    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        xmin-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    legand {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 35%;
        border-radius: 4px;
        border: 1px solid #ddd;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }
</style>
<fieldset>
<legend>
    Contra-Indication
</legend>
    <a class="" href="~/Admin/Index"><button type="button" class="btn btn-outline-primary">Back to Admin</button></a>
<p>
        <a asp-action="Create"><button type="button" class="btn btn-outline-info">Create New</button></a>
</p>
 <div class="form-control">
        <form asp-action="Index" method="get">
            <label for="SearchString">Search by Active Ingredient:</label>
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" />

        </form>
        <a asp-action="Index">Back to full list</a>
        <hr />

    </div>
<table class="table table-bordered">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActiveIngredientRecords)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conditions.ICD_10_CODE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conditions.Diagnosis)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveIngredientRecords.ActiveIngredientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conditions.ICD_10_CODE)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Conditions.Diagnosis)
                </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.ContraId"><i class="fa-sharp fa-solid fa-pen-to-square text-info"></i>Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ContraId"><i class="fa-sharp fa-solid fa-circle-info text-primary"></i>Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ContraId"><i class="fa-sharp fa-solid fa-trash text-danger"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</fieldset>
@model IEnumerable<E_Prescription2.Models.MedicationInteraction>

@{
    ViewData["Title"] = "Index";
}
<style>
    .modal {
        text-align: center;
        padding: 0 !important;
    }

        .modal:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -4px;
        }

    .modal-dialog {
        display: inline-block;
        text-align: left;
        vertical-align: middle;
    }

    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        xmin-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    legand {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 35%;
        border-radius: 4px;
        border: 1px solid #ddd;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }
</style>
<fieldset>
    <legend>Medication Interaction</legend>


    <a class="" href="~/Admin/Index">Back to Admin </a>
<p>
    <a asp-action="Create">Create New</a>
</p>
    <div class="form-control">
        <form asp-action="Index" method="get">
            <label for="SearchString">Search by Active Ingredient Name:</label>
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" />

        </form>
        <a asp-action="Index">Back to full list</a>
        <hr />

    </div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActiveIngredientOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActiveIngredientTwo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveIngredientOne.ActiveIngredientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveIngredientTwo.ActiveIngredientName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MediInteractionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MediInteractionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MediInteractionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</fieldset>

@model IEnumerable<E_Prescription2.Models.MedicationActiveIngredient>

@{
    ViewData["Title"] = "Index";
}
<style>
    .modal {
        text-align: center;
        padding: 0 !important;
    }

        .modal:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -4px;
        }

    .modal-dialog {
        display: inline-block;
        text-align: left;
        vertical-align: middle;
    }

    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        xmin-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    legand {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 35%;
        border-radius: 4px;
        border: 1px solid #ddd;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }
</style>

<fieldset>
<legend>Medication</legend>
    <a class="" href="~/Admin/Index"><button type="button" class="btn btn-outline-primary">Back to Admin</button> </a>
<p>
        <a asp-action="Create"><button type="button" class="btn btn-outline-info">Create New</button></a>
</p>
<div class="form-control">
    <form asp-action="Index" method="get">
        <label for="SearchString">Search by Medication Name:</label>
        <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
        <input type="submit" value="Search" class="btn btn-primary"/>

    </form>
        <a asp-action="Index"><i class="fa-sharp fa-solid   fa-arrows-rotate"></i></a>
    <hr/>
    
</div>
</fieldset>
    <div class="table-responsive">
    <table class="table table-bordered">
    <thead class="table-primary ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MedicationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Strength)
            </th>
            <th>
                Active Ingredients
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedules)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DosageForms)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MedicationName)
            </td>
            <td>
                        <p>@Html.DisplayFor(modelItem => item.Strength) </p>
                        <p>@Html.DisplayFor(modelItem => item.Strength2) </p>
                        <p>@Html.DisplayFor(modelItem => item.Strength3) </p>
                        <p>@Html.DisplayFor(modelItem => item.Strength4) </p>



               
            </td>
            <td>
                        <p>@Html.DisplayFor(modelItem => item.ActiveIngredientRecord1.ActiveIngredientName) </p>
                        <p>@Html.DisplayFor(modelItem => item.ActiveIngredientRecord2.ActiveIngredientName) </p>
                        <p>@Html.DisplayFor(modelItem => item.ActiveIngredientRecord3.ActiveIngredientName) </p>
                        <p>@Html.DisplayFor(modelItem => item.ActiveIngredientRecord4.ActiveIngredientName) </p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schedules.ScheduleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DosageForms.DosageFormName)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.MediActiveId"><i class="fa-sharp fa-solid fa-pen-to-square text-info"></i>Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MediActiveId"><i class="fa-sharp fa-solid fa-circle-info text-primary"></i>Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.MediActiveId"><i class="fa-sharp fa-solid fa-trash text-danger"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
@section scripts{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        var strValue = "@((string)ViewBag.mssg)";
        if (strValue !== null && strValue !== '') {
            swal("", strValue, "success");
        }
    </script>
}

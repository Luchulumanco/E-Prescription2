@model IEnumerable<E_Prescription2.Models.DispenseDetails>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PharmacistUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PharmacyRecords)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RepeatsLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PharmacistUser.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PharmacyRecords.LicenseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RepeatsLeft)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DispenseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DispenseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DispenseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@section scripts{
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>
        var strValue = "@((string)ViewBag.mssg)";
        if (strValue !== null && strValue !== '') {
            swal("", strValue, "success");
        }
    </script>
                        }

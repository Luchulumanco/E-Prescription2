@model IEnumerable<E_Prescription2.Models.PharmacyRecord>

@{
    ViewData["Title"] = "Index";
}
<style>
    .modal {
        text-align: center;
        padding: 0 !important;
    }

        .modal:before {
            content: '';
            display: inline-block;
            height: 100%;
            vertical-align: middle;
            margin-right: -4px;
        }

    .modal-dialog {
        display: inline-block;
        text-align: left;
        vertical-align: middle;
    }

    fieldset {
        border: 1px solid #ddd !important;
        margin: 0;
        xmin-width: 0;
        padding: 10px;
        position: relative;
        border-radius: 4px;
        background-color: #f5f5f5;
        padding-left: 10px !important;
    }

    legand {
        font-size: 14px;
        font-weight: bold;
        margin-bottom: 0px;
        width: 35%;
        border-radius: 4px;
        border: 1px solid #ddd;
        padding: 5px 5px 5px 10px;
        background-color: #ffffff;
    }
</style>
<fieldset>
    <legend> Pharmacy Records</legend>
    <a class="" href="~/Admin/Index">Back to Admin </a>
<p>
    <a asp-action="Create">Create New</a>
</p>
 <div class="form-control">
        <form asp-action="Index" method="get">
            <label for="SearchString">Search by License Number:</label>
            <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" />

        </form>
        <a asp-action="Index">Back to full list</a>
        <hr />

    </div>
</fieldset>
<div class="table-responsive">

    <table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PharmacyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddressLine2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provinces)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suburbs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCodes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                @Html.DisplayFor(modelItem => item.PharmacyName)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.AddressLine1)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.AddressLine2)
            </td>
                <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Provinces.ProvinceName)
            </td >
            <td >
                @Html.DisplayFor(modelItem => item.Suburbs.SuburbName)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Cities.CityName)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.PostalCodes.PostalCodeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td >
            <td>
                @Html.DisplayFor(modelItem => item.LicenseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                        <i class="fa-sharp fa-solid fa-trash"><a asp-action="Edit" asp-route-id="@item.PharmacyId">Edit</a></i> |
                <a asp-action="Details" asp-route-id="@item.PharmacyId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PharmacyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>